

<!-- 1. Add Person to Collection -->
<div id="1" class="menu-div" style="display:none">
    <form method="POST" action="/person">

        <span>Add a person to DB collection</span><hr><br>

        <label>Full Name:</label>
        <input type="text" name="firstname" id="firstname" class="field-divided" placeholder="First Name" size="10" required>
        <input type="text" name="surname" id="surname" class="field-divided" placeholder="Surname" required><br>

        <label>Telephone:</label>
        <input type="tel" name="telephone" id="telephone" class="field-divided" placeholder="Telephone" required><br>

        <label>Midterm Grade:</label>
        <input type="number" name="grades[midterm]" id="midterm" class="field-small" required>

        <label>Endterm Grade:</label>
        <input type="number" name="grades[endterm]" id="endterm" class="field-small" required>

        <label>Final Grade:</label>
        <input type="number" name="grades[final]" id="final" class="field-small" required><br><br>

        <input type="text" name="password" id="password" class="field-divided" placeholder="Password" required><br>

        <input type="submit" value="Create Person">

    </form>


    <label >Response:</label>
    <textarea name="response" id ="response"  readonly><%- JSON.stringify(ui.data[1],null,3) %></textarea>
</div>


<!-- 2. Get Persons -->
<div id="2" class="menu-div" style="display:none">
    <form method="GET" action="/person" >
        <span>List persons</span><hr><br>
        <input type="submit" value="List Persons" />
    </form>

    <br>
    <label>People:</label>
<textarea readonly>
<% if ( typeof ui.data[2] == 'object' && ui.data[2] ) { %><%for (var i in ui.data[2].data){ %><%= i %>:
Mongo ID:<%= ui.data[2].data[i]._id %>
    Name: <%= ui.data[2].data[i].firstname %> <%= ui.data[2].data[i].surname %>
    Phone: <%= ui.data[2].data[i].telephone %>
    Grades:
    <% if (ui.data[2].data[i].grades) { %>
        Midterm: <%= ui.data[2].data[i].grades.Midterm %>
        Endterm: <%= ui.data[2].data[i].grades.Endterm %>
        Final: <%= ui.data[2].data[i].grades.Final %>
        Total: <%= 0.4*ui.data[2].data[i].grades.Final+0.3*ui.data[2].data[i].grades.Endterm + 0.3*ui.data[2].data[i].grades.Midterm%>
    <% } %>


<%}%>
<%}%>
</textarea>
    <br>
    <label >Response:</label>
    <textarea name="response" id ="response"  readonly><%- JSON.stringify(ui.data[2],null,3) %></textarea>
</div>

